{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@workspace/*": ["libs/*"],
      "@workspace/agents/*": ["libs/agents/*"],
      "@workspace/data-providers/*": ["libs/data-providers/*"],
      "@workspace/assets/*": ["libs/assets/*"],
      "@workspace/risk/*": ["libs/risk/*"],
      "@workspace/ui-components/*": ["libs/ui-components/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
